generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:admin@localhost:5432/brisanet_challenger_tests?schema=public"
}


model Professor {
  id          String    @id @default(uuid())
  nome        String   
  telefone    String
  email       String    @unique
  cpf         String    

  cadeiras    Cadeira[]

  @@map("professores")  
}

model LogError {
  id          String    @id @default(uuid())
  stack       String   
  date        DateTime

  @@map("log_error")  
}

model Aluno {
  id          String    @id @default(uuid())
  nome        String   
  telefone    String
  email       String    @unique
  cpf         String   
  matricula   String 

  @@map("alunos")  
}

model Cadeira {
  id              String      @id @default(uuid())
  nome            String   
  slug            String
  data_inicio     DateTime
  data_fim        DateTime   
  carga_horaria   Int

  professor       Professor   @relation(fields: [professor_id], references: [id])
  professor_id    String

  @@map("cadeiras")  
}
