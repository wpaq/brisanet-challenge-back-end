generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:admin@localhost:5432/brisanet_challenger?schema=public"
}

model Professor {
  id          String    @id @default(uuid())
  nome        String   
  telefone    String
  email       String    @unique
  cpf         String    
  cadeiras    Cadeira[]

  @@map("professores")  
}

model LogError {
  id          String    @id @default(uuid())
  stack       String   
  date        DateTime

  @@map("log_error")  
}

model Aluno {
  id          String    @id @default(uuid())
  nome        String   
  telefone    String
  email       String    @unique
  cpf         String   
  matricula   String 

  cadeirasAlunos    CadeirasAlunos[] 

  @@map("alunos")  
}

model Cadeira {
  id                String      @id @default(uuid())
  nome              String   
  slug              String
  dataInicio        DateTime    @db.Date
  dataFim           DateTime    @db.Date
  cargaHoraria      Int

  professor         Professor   @relation(fields: [professorId], references: [id])
  professorId       String    

  cadeirasAlunos    CadeirasAlunos[]  

  @@map("cadeiras")  
}

model CadeirasAlunos {
  id             String     @id @default(uuid())
  
  cadeira        Cadeira    @relation(fields: [cadeiraId], references: [id])
  cadeiraId      String   

  aluno          Aluno      @relation(fields: [alunoId], references: [id])
  alunoId        String     

  @@map("cadeiras_alunos")  
}
